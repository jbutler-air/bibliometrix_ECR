Package: bibliometrix
Type: Package
Title: Comprehensive Science Mapping Analysis
Version: 4.0.2
Authors@R: c(
    person(given = "Massimo",
           family = "Aria",
           role = c("cre", "aut", "cph"),
           email = "aria@unina.it",
